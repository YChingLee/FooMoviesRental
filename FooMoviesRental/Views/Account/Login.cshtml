@model FooMoviesRental.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
}
@if (string.IsNullOrEmpty(Convert.ToString(Session["Username"])))
{
    <form class="form-horizontal" role="form" action="~/Account/Login" method="post">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="col-md-1 control-label" for="Naam">Naam</label>
            <div class="col-md-11">
                @Html.TextBoxFor(m => m.Naam, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Naam, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-1 control-label" for="Postcode">Postcode</label>
            <div class="col-md-11">
                @Html.TextBoxFor(m => m.Postcode, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Postcode, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-11">
                <input type="submit" class="btn btn-default" value="Aanmelden" />
            </div>
        </div>
    </form>
}