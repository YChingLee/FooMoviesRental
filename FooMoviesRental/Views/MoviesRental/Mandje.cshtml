@model List<FooMoviesRental.Models.MandjeItem>
@{
    ViewBag.Title = "Mandje";
}

<h3 class="page-header">Winkelmaandje</h3>
@if (Model.Count > 0)
{
    <div class="row">
        <div class="col-md-8">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Titel</th>
                        <th>Prijs</th>
                        <th>Verwijderen</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Titel)</td>
                            <td>@Html.DisplayFor(m => item.Prijs)</td>
                            @*//TODO: Post request ~/MoviesRental/Verwijderen *@ 
                            <td>Verwijderen</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    //TODO: Link Afrekenen 
    <a class="btn btn-default">Afrekenen &raquo;</a>
    <a href="~/MoviesRental/Genres" class="btn btn-default">Verder winkelen &raquo;</a>
}
else
{
    <h4>Uw maandje is leeg!</h4>
    <a href="~/MoviesRental/Genres" class="btn btn-default">Terug naar genre overzicht &raquo; </a>
}
