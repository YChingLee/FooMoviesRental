@model List<FooMoviesRental.Models.Film>

@{
    ViewBag.Title = "Films";
}

@if (ViewBag.genre != null)
{
    <h3 class="page-header">@ViewBag.genre > Films</h3>
}
@if (TempData["FilmTitel"] != null)
{
    <h4 class="text-danger">🛑 Sorry, film @TempData["FilmTitel"] is ondertussen buiten voorraad.</h4>
}

<div class="row">
    <div class="col-md-8">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titel</th>
                    <th>Prijs</th>
                    <th class="text-center">In Vorraad</th>
                    <th>Huren</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Titel</td>
                        <td>@Html.DisplayFor(m => item.Prijs)</td>
                        <td class="text-center">@item.InVoorraad</td>
                        <td>
                            @if (item.InVoorraad > 0)
                            {
                                <a href="@Url.Action("Huren", new { bandNr = item.BandNr })">Huren</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<a href="~/MoviesRental/Genres" class="btn btn-default">Terug naar genre overzicht &raquo; </a>

